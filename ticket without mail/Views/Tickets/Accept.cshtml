@model ticket_without_mail.Models.AcceptModel

@{
    ViewBag.Title = "Прифани тикет";
}

<h2>Прифани тикет</h2>

<h3>Потврди:</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Испратено од mail:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ticket.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ticket.problemSubject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ticket.problemSubject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ticket.problemBody)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ticket.problemBody)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ticket.submitTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ticket.submitTime)
        </dd>
        <dt>
            Прифати како:
            <form method="post">
                <select name="res" id="res">
                    @{
                        foreach (string email in Model.emails)
                        {
                            <option value="@email">@email</option>
                        }
                    }
                </select>

        </dt>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Прифани" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }</form>
</div>
